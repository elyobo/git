[user]
    name = Liam O'Boyle
    email = liam@elyobo.net

[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto

[core]
	autocrlf = input
	excludesfile = ~/.gitdir/ignore
    editor = /usr/bin/vim
    pager=less -x4
	safecrlf = true

[branch]
	autosetupmerge = true
	autosetuprebase = always

[merge]
    ff = only
    conflictstyle = diff3

[push]
	default = simple

[status]
    showUntrackedFiles = all

[transfer]
    fsckobjects = true

[credential]
	helper = cache --timeout=3600

[diff]
	algorithm = patience
    tool = icdiff

[difftool]
    prompt = false

[difftool "icdiff"]
    cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE

[include]
    path = .gitdir/alias.conf
